<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane minHeight="400.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="200.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="15.0" minWidth="15.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="35.0" minWidth="35.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="200.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="400.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <Pane minWidth="175.0" style="-fx-background-color: #55FED9;" />
    <VBox alignment="CENTER" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #55FED9;" GridPane.columnIndex="1">
        <Label contentDisplay="CENTER" maxWidth="150.0" text="Looking for quick and safe rides?" textAlignment="CENTER" textFill="#655757" wrapText="true">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <ImageView pickOnBounds="true" preserveRatio="true">
            <Image url="@images/logo177.png" />
        </ImageView>
        <Label text="Join RideShare today!" textFill="#655757">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Button fx:id="buttonSignup" maxWidth="90.0" minWidth="90.0" mnemonicParsing="false" prefWidth="90.0" style="-fx-background-color: #FFFFFF; -fx-cursor: hand;" text="Sign up" textFill="#0060fa">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
    </VBox>
    <Pane maxWidth="15.0" minWidth="15.0" prefWidth="15.0" style="-fx-background-color: #55FED9;" GridPane.columnIndex="2" />
    <Pane maxWidth="35.0" minWidth="35.0" prefWidth="35.0" GridPane.columnIndex="3" />
    <VBox alignment="CENTER" fillWidth="false" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" spacing="40.0" GridPane.columnIndex="4">
        <ImageView pickOnBounds="true" preserveRatio="true">
            <Image url="@images/lock72.png" />
        </ImageView>
        <VBox alignment="CENTER" spacing="30.0">
            <VBox alignment="CENTER" spacing="10.0">
                <VBox alignment="CENTER_LEFT">
                    <Label text="Username">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <TextField fx:id="textFieldUsername">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </TextField>
                </VBox>
                <VBox alignment="CENTER_LEFT">
                    <Label text="Password">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <PasswordField fx:id="passwordField">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </PasswordField>
                </VBox>
            </VBox>
            <Button fx:id="buttonLogin" alignment="CENTER" defaultButton="true" maxWidth="131.0" minWidth="131.0" mnemonicParsing="false" prefWidth="131.0" style="-fx-background-color: #1362f5; -fx-cursor: hand;" text="Log in" textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Button>
        </VBox>
    </VBox>
    <Pane minWidth="175.0" GridPane.columnIndex="5" />
</GridPane>
