<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox alignment="CENTER" minHeight="400.0" minWidth="400.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DriverRideController">
   <children>
      <VBox alignment="CENTER" minHeight="400.0" minWidth="500.0" spacing="30.0">
      <children>
         <Label fx:id="labelWaitsAt" alignment="CENTER" contentDisplay="CENTER" minWidth="450.0" text="Your client waits at location X" textAlignment="CENTER" wrapText="true">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
            <HBox alignment="CENTER" minWidth="400.0" spacing="50.0">
               <children>
                  <Button fx:id="buttonCancel" alignment="CENTER" cancelButton="true" maxWidth="140.0" minWidth="140.0" mnemonicParsing="false" onAction="#cancelRide" prefWidth="140.0" style="-fx-background-color: #d6d6d6;" text="Cancel ride" textFill="#575757">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               <Button fx:id="buttonArrived" alignment="CENTER" defaultButton="true" maxWidth="140.0" minWidth="140.0" mnemonicParsing="false" prefWidth="140.0" style="-fx-background-color: #0060FA;" text="I arrived" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="18.0" />
                  </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
      </children>
      </VBox>
   </children>
</HBox>
